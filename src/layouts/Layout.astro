
---
import '../styles/global.css';
import 'glightbox/dist/css/glightbox.min.css';

interface Props {
	title?: string;
}

const { title = "Alex Schmidt | Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-slate-200 min-h-screen flex flex-col">
        <main class="flex-grow">
		    <slot />
        </main>
        
        <footer class="py-6 text-center text-slate-500 text-sm">
            &copy; {new Date().getFullYear()} Alex Schmidt. All rights reserved.
        </footer>
	</body>
</html>
