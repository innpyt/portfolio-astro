
---
import Sidebar from '../components/Sidebar.astro';
import '../styles/global.css';
import 'glightbox/dist/css/glightbox.min.css';

interface Props {
	title?: string;
}

const { title = "Portfolio | Alexander Schmidt | Lead Frontend Engineer" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="image/x-icon" type="image/svg+xml" href="/assets/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-slate-200 min-h-screen">
        <style>
            ::-webkit-scrollbar {
                width: 8px;
            }
            ::-webkit-scrollbar-track {
                background: #0f172a; 
            }
            ::-webkit-scrollbar-thumb {
                background: #334155; 
                border-radius: 4px;
            }
            ::-webkit-scrollbar-thumb:hover {
                background: #475569; 
            }
        </style>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
                <!-- Left Sidebar -->
                <div class="md:col-span-3 lg:col-span-4">
                    <div class="md:sticky md:top-12">
                        <slot name="sidebar">
                            <Sidebar />
                        </slot>
                    </div>
                </div>

                <!-- Right Content -->
                <main class="md:col-span-9 lg:col-span-8">
                    <slot />
                </main>
            </div>
        </div>
        
        <footer class="py-6 text-center text-slate-600 text-xs border-t border-slate-800/50 mt-12 bg-slate-900 z-10 relative">
            &copy; {new Date().getFullYear()} Alex Schmidt. All rights vibecoded.
        </footer>
	</body>
</html>
