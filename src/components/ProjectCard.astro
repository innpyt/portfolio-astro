
---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<a href={`/projects/${project.slug}`} class="project-card group relative overflow-hidden rounded-xl tech-card block transition-transform hover:-translate-y-1 hover:shadow-cyan-500/20 hover:shadow-lg" data-tags={JSON.stringify(project.data.tags)}>
  <div class="aspect-video w-full overflow-hidden bg-slate-800">
    {project.data.image ? (
      <img 
        src={project.data.image} 
        alt={project.data.title} 
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
    ) : (
      <div class="flex h-full items-center justify-center text-slate-500">
        No Image
      </div>
    )}
  </div>
  
  <div class="p-4">
    <h3 class="text-xl font-bold text-sky-400 mb-2 group-hover:text-cyan-300">{project.data.title}</h3>
    <div class="flex flex-wrap gap-2 mt-2">
      {project.data.tags.map(tag => (
        <span class="text-xs font-mono py-1 px-2 rounded bg-slate-800 border border-slate-700 text-slate-300">
          {tag}
        </span>
      ))}
    </div>
  </div>
</a>
